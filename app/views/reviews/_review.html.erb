<p><%= review.rating %></p>
<p><%= review.comment %></p>

<% if user_signed_in? %>
  
  <% if review.user_id == current_user.id %>

    <%= link_to "Edit", edit_book_review_path(review.book, review) %>
    <%= button_to "Delete", 
                book_review_path(review.book, review), 
                method: :delete,
                form: { style: "display: inline-block;" },
                class: "btn btn-sm btn-outline-danger" %>
  <% end %>
  
<% end %>